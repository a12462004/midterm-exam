<h1>書本列表</h1>

  <%= link_to "新增書本", new_book_path %>

  <table>
    <thead>
      <tr>
        <td>書名</td>
        <td>簡介</td>
        <td>作者</td>
        <td>售價</td>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%=link_to book.name,book %></td>
        <td><%= book.introduction %></td>
        <td><%= book.writer %></td>
        <td><%= book.price %></td>
        <td>
        <%= link_to "edit",edit_book_path(book) %>
        <%= link_to "delete",book,method: "delete",data:{ confirm: 'delete?!'} %>
      </td>
      </tr>
      <% end %>
    </tbody>
  </table>